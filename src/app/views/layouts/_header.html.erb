<header class="fixed-top header-nav bg-light border-bottom">
    <nav class="h-100 d-flex align-items-center">
        <div class="my-2 mr-auto">
            <%= link_to root_path, class: 'text-dark' do %>
            <h1>スノメン</h1>
            <% end %>
        </div>
        <div class="my-2 mr-4 d-none d-sm-block">
            <form class="form-inline">
                <input class="form-control mr-2" type="search" placeholder="検索" aria-label="Search">
                <button class="btn btn-dark my-0" type="submit">検索</button>
            </form>
        </div>
        <div class="mr-2 dropdown">
            <% if logged_in? %>
            <div class="dropdown-toggle" data-toggle="dropdown" id="user-menu">
                <img src="<%= gravatar_for current_user %>" alt="<%= current_user.name %>"
                    class="rounded-circle w-50px">
            </div>
            <div class="dropdown-menu">
                <%= link_to "プロフィール", current_user, class: "dropdown-item" %>
                <%= link_to "アカウント設定", edit_user_path(current_user), class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %>
            </div>
            <% else %>
            <%= link_to "ログイン", login_path %>
            <% end %>
        </div>
    </nav>
</header>
