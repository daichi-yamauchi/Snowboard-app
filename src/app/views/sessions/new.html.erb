<% provide(:title, "ログイン") %>
<h2 class="h2 mb-3">ログイン</h2>

<div class="form-group">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%# <%= render 'shared/error_messages' %>

    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control mb-3", placeholder: "例: user@example.com" %>

    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "form-control mb-3", placeholder: "Password" %>

    <%= f.submit "ログイン", class: "btn btn-primary mb-3" %>
    <% end %>

    <p>アカウントをお持ちでないですか？ <%= link_to "新規登録", signup_path %></p>
</div>
